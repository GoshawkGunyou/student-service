<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.studentservice.mapper.ClassInfoMapper">
    <resultMap id="classResult" type="ClassInfo">
        <id javaType="int" column="id" property="id" />
        <result property="serial" column="serial" javaType="string"/>
        <result property="name" column="name" javaType="string"/>
        <result property="status" column="status" javaType="ClassStatus"/>
        <association property="metaData" javaType="MetaData">
            <result property="creator" column="creator"/>
            <result property="creationTime" column="creation_time" javaType="java.time.LocalDateTime" typeHandler="org.apache.ibatis.type.LocalDateTimeTypeHandler"/>
            <result property="lastEditor" column="last_editor"/>
            <result property="lastEdit" column="last_time" javaType="java.time.LocalDateTime" typeHandler="org.apache.ibatis.type.LocalDateTimeTypeHandler"/>
        </association>
    </resultMap>

    <select id="findAll" resultMap="classResult">
        SELECT * FROM classes;
    </select>

    <select id="findById" resultMap="classResult" parameterType="ClassInfo">
        SELECT * FROM classes
        WHERE id = #{id};
    </select>


</mapper>